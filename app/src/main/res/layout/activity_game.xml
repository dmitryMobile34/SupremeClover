<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/background_game">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_hor_96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.84" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:padding="10dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:autoSizeTextType="uniform"
        android:textColor="@color/primary_light"
        android:fontFamily="@font/montserratblack"

        app:layout_constraintStart_toStartOf="@id/guideline_vert_4"
        app:layout_constraintTop_toTopOf="@id/guideline_hor_4"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_68"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_12" />

    <ImageView
        android:id="@+id/buttonSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/ic_settings"

        app:layout_constraintTop_toTopOf="@id/guideline_hor_4"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_84"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_96"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_12" />

    <ImageView
        android:id="@+id/buttonGift"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/ic_gift"

        app:layout_constraintTop_toTopOf="@id/guideline_hor_4"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_68"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_80"
        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_12" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/textMainWindowWrap"
        android:layout_width="0dp"
        android:layout_height="140dp"

        android:backgroundTint="@color/primary_light"

        app:cardCornerRadius="20dp"
        app:strokeWidth="4dp"
        app:strokeColor="@color/primary_dark"

        app:layout_constraintBottom_toBottomOf="@id/guideline_hor_96"
        app:layout_constraintStart_toStartOf="@id/guideline_vert_35"
        app:layout_constraintEnd_toEndOf="@id/guideline_vert_96">

        <TextView
            android:id="@+id/textMainWindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:autoSizeTextType="uniform"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/latobold"
            android:textColor="@color/black"

            android:text="Greetings, Traveler. You need to complete gem password before you'll enter dwarf ruins. Just found right order of these gems. I guess they all should be same color. Try to tap on that hummer." />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:layout_margin="16dp"

        app:layout_constraintTop_toTopOf="@id/guideline_hor_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gemFirstWrap"
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"

            android:layout_margin="4dp"

            app:cardCornerRadius="20dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/primary_dark">

            <ImageView
                android:id="@+id/gemFirst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="8dp"

                tools:src="@drawable/gem1" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gemSecondWrap"
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"

            android:layout_margin="4dp"

            app:cardCornerRadius="20dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/primary_dark">

            <ImageView
                android:id="@+id/gemSecond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="8dp"

                tools:src="@drawable/gem2" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gemThirdWrap"
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"

            android:layout_margin="4dp"

            app:cardCornerRadius="20dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/primary_dark">

            <ImageView
                android:id="@+id/gemThird"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="8dp"

                tools:src="@drawable/gem3" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/buttonHummerWrap"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_margin="8dp"

        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"

        app:cardCornerRadius="100dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/primary_dark"

        app:layout_constraintTop_toTopOf="@id/guideline_hor_50"
        app:layout_constraintStart_toStartOf="@id/textMainWindowWrap"
        app:layout_constraintEnd_toEndOf="@id/textMainWindowWrap">

        <ImageView
            android:id="@+id/buttonHummer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/hummer" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>